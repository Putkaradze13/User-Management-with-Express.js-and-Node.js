{
  "name": "task20-rest",
  "version": "1.0.0",
  "description": "Node.js RESTful API Project",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:docker": "docker-compose up",
    "stop:docker": "docker-compose down",
    "lint:fix": "eslint --fix .",
    "lint": "lint-staged",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,js}\""
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "keywords": [
    "node",
    "restful",
    "api"
  ],
  "author": "Tengo",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "mongoose-delete": "^0.5.4",
    "nodemailer": "^6.7.5",
    "pino": "^7.9.0",
    "pino-pretty": "^7.5.4",
    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15"
  }
}
